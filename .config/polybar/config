ws-icon-8 = 8;8
ws-icon-9 = 9;9
ws-icon-default =

pin-workspaces = true 

label-mode = " %mode% "
label-mode-background = ${colors.background}

label-focused = %{F#02adff B#0B0F10}î‚°%{F-} %icon% %{B#02adff F#0B0F10}î‚°%{F-}
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background-alt}

label-visible = " %icon% "
label-visible-foreground = ${colors.foreground}
label-visible-background = #02adff

label-unfocused = " %icon% "
label-unfocused-foreground = #0B0F10
label-unfocused-background = #02adff

