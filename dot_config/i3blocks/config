[mediaplayer]
color="#f8f8f2"
command=$HOME/.local/scripts/i3-mediaplayer
instance='spotify'
interval=1
signal=10

[cpu_util_detailed]
command=$HOME/.local/scripts/i3-cpu
label=CPU
markup=pango
interval=5

[memory]
command=$HOME/.local/scripts/i3-memory
label=MEM 
interval=5

[memory]
command=$HOME/.local/scripts/i3-memory
label=SWAP 
interval=5
instance=swap

[i3-volume]
command=$HOME/.local/scripts/i3-volume output i3blocks
interval=once
signal=10
color="#f8f8f2"
separator_block_width=10
markup=pango

[keymap]
color="#f8f8f2"
label=‚å®
command=xkb-switch && xkb-switch -W
